@model Post
  <div class="row">
    <div class="col-lg-8">
      <div class="bg-white p-4">
        <h1 class="h4 mb-4">@Model.Title</h1>

        <div class="tags">
          @foreach(var tag in Model.Tags)
          {
            <a href="/posts/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
          }
        </div>

        <img src="~/img/@Model.Image" class="img-fluid rounded" alt="" />
        <ul class="list-inline my-3 border-bottom">
          <li class="list-inline-item"> <i class="bi bi-calendar"></i>@Model.PublishedOn.ToString("d") </li>
          <li class="list-inline-item"> <i class="bi bi-person-circle"></i> <a href="/profile/@Model.User.UserName"> @Model.User.Name </a></li>
        </ul>
        <hr class="py-3">
        <div>@Html.Raw(@Model.Content)</div>
      </div>
      <div class="bg-white mt-3">
        <div class="card border-0">
          <div class="card-header pb-0">
            <h4>@Model.Comments.Count() adet yorum</h4>
          </div>
          <div class="card-body">
            @foreach(var comment in Model.Comments)
            {
              <div class="my-4 d-flex">
                <img src="/img/@comment.User.Image" alt="" class="avatar rounded-circle float-start me-3">
                <div>
                  <div class="mb-2 d-flex">
                    <h6 class="me-2">
                      <a href="/profile/@Model.User.UserName"> @comment.User.Name </a>
                    </h6>
                    <small>@comment.PublishedOn.ToString("G")</small>
                  </div>
                  <p>@comment.Text</p>
                </div>
              
              </div>
            }

            @if(User.Identity.IsAuthenticated)
            {
              <hr class="my-4">
            <div>
              <h4 class="mb-3">Yorum Ekle</h4>
              <form action="/posts/AddComment" method="post">
                <input type="hidden" name="PostId" value="@Model.PostId">
                <input type="hidden" name="Url" value="@Model.Url">
               
                <div class="mb-3">
                  <label for="Text" class="form-label">Yorum</label>
                  <textarea type="text" name="Text" rows="3" id="Text" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                  <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
              </form>
            </div>
            }
            else
            {
              <p>Yorum için giriş yap. <a href="/users/login">Login</a></p>
            }


            
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <vc:tags-menu></vc:tags-menu>
      <vc:new-posts></vc:new-posts>
    </div>
  </div>
</Post>
