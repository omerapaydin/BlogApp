@model List<Post>
  <div class="row">
    <div class="col-12">
      <h2>Post List</h2>
      <a href="/posts/create" class="btn btn-primary">New Post</a>
      <hr />
      <table class="table tabled-bordered">
        <thead>
          <tr>
            <th style="width: 200px">Image</th>
            <th>Id</th>
            <th>Title</th>
            <th style="width: 125px"></th>
          </tr>
        </thead>
        <tbody>
          @foreach(var item in Model) {
          <tr>
            <td><img src="/img/@item.Image" class="img-fluid" /></td>
            <td>@item.Title</td>
            <td>@item.IsActive</td>
            <td>
              <a href="#" class="btn btn-sm btn-primary">Delete</a>
              <a href="/posts/edit/@item.PostId" class="btn btn-sm btn-denger"
                >Edit</a
              >
            </td>
          </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</Post>
